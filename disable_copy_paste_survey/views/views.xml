<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="survey_user_input_form_inherit" model="ir.ui.view">
        <field name="name">survey.user_input.form.inherit</field>
        <field name="model">survey.user_input</field>
        <field name="inherit_id" ref="survey.survey_user_input_view_form"/>
        <field name="arch" type="xml">
            <!-- Locate the notebook inside the form view -->
            <xpath expr="//notebook" position="inside">
                <!-- New Page Inside Notebook -->
                <page string="Logs">
                    <field name="survey_actions" mode="list" readonly="True" no_label="1">
                        <list>
                            <field name="user_id"/>
                            <field name="copy_paste_attempts"/>
                            <field name="last_copy_paste_attempt"/>
                            <field name="focus_lost_count"/>
                            <field name="last_focus_lost"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
    <record id="view_survey_video_capture_tree" model="ir.ui.view">
        <field name="name">survey.video.capture.tree</field>
        <field name="model">survey.video.capture</field>
        <field name="arch" type="xml">
            <list string="Survey Video Captures">
                <field name="survey_id"/>
                <field name="participant_id"/>
                <field name="filename" invisible="1"/>
                <field name="video_data" filename="filename"/>
                <field name="focus_lost_count"/>
                <field name="last_focus_lost"/>
                <field name="copy_paste_attempts"/>
                <field name="last_copy_paste_attempt"/>
                <field name="user_id"/>
            </list>
        </field>
    </record>
    <record id="view_survey_video_capture_form" model="ir.ui.view">
        <field name="name">survey.video.capture.form</field>
        <field name="model">survey.video.capture</field>
        <field name="arch" type="xml">
            <form string="Survey Video Capture">
                <sheet>
                    <group>
                        <group>
                            <field name="survey_id"/>
                            <field name="participant_id"/>
                            <field name="filename" invisible="1"/>
                            
                            
                        </group>
                        <group>
                            <field name="focus_lost_count"/>
                            <field name="last_focus_lost"/>
                            <field name="copy_paste_attempts"/>
                            <field name="last_copy_paste_attempt"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="video_data" widget="video" filename="filename"/>
                    </group> 
                </sheet>
            </form>
        </field>
    </record>


</odoo>
